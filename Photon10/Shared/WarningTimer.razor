<p>Game starting in @time seconds.</p>

@code {
    private int time = 0;
    private DateTime start = DateTime.Now;
    public bool timerEnd = false;

    private void warning()
    {
        time = (int)(30 - (DateTime.Now - start).TotalSeconds);
        if (time >= 0) {
            StateHasChanged();
        } else
        {
            timerEnd = true;
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        warning();
    }
}
